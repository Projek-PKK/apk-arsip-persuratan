<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCard"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/recImage"
            android:src="@drawable/uploadimg"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"/>

        <TextView
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:id="@+id/recName"
            android:text="Nama"
            android:textColor="@color/lavender"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/recImage"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:id="@+id/recAbsen"
            android:text="Absen"
            android:layout_toEndOf="@id/recName"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:textAlignment="center"
            android:textColor="@color/lavender"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:id="@+id/recTanggal"
            android:text="Tanggal"
            android:layout_toEndOf="@id/recAbsen"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:textAlignment="center"
            android:textColor="@color/lavender"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:id="@+id/recDeskripsi"
            android:text="Deskripsi"
            android:textColor="@color/lavender"
            android:textSize="14sp"
            android:layout_toEndOf="@id/recImage"
            android:layout_below="@id/recName"
            android:layout_marginStart="20dp"
            android:maxLines="1"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:id="@+id/recTempat"
            android:text="Tempat"
            android:layout_toEndOf="@id/recTanggal"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:textAlignment="center"
            android:textColor="@color/lavender"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:id="@+id/recKelas"
            android:text="Kelas"
            android:layout_toEndOf="@id/recTempat"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:textAlignment="center"
            android:textColor="@color/lavender"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:id="@+id/recNisn"
            android:text="Nisn"
            android:layout_toEndOf="@id/recKelas"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:textAlignment="center"
            android:textColor="@color/lavender"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:id="@+id/recAngkatan"
            android:text="Angkatan"
            android:layout_toEndOf="@id/recAbsen"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:textAlignment="center"
            android:textColor="@color/lavender"
            android:textSize="16sp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
