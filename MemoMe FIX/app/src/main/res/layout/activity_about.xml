<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ctr_bg"
    tools:context=".AboutActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:fitsSystemWindows="true"
        android:theme="@style/Theme.AppCompat">

    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:contentScrim="?attr/colorPrimary"
        app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
        app:title="Aidan Darva"
        android:id="@+id/collapsing_toolbar"
        app:titleTextColor="#FFFFFF"
        android:background="@drawable/ctr_bg">

        <ImageView
            android:layout_width="320dp"
            android:layout_height="190dp"
            android:layout_gravity="center"
            android:layout_marginBottom="35dp"
            android:scaleType="centerCrop"
            android:src="@drawable/aidarva"
            app:layout_collapseMode="parallax" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_collapseMode="pin"/>

    </com.google.android.material.appbar.CollapsingToolbarLayout>


    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:padding="25dp"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Darva Aryasatya Putra Hermawan dan Aidan Deandra Pasai, adalah tim pengembang yang berada di belakang aplikasi inovatif ini. Aplikasi ini bertujuan untuk menyediakan alat pengelolaan biodata lengkap siswa dan siswi dari tahun ke tahun. Data yang tercakup dalam aplikasi ini mencakup informasi seperti foto, tanggal lahir, NIS (Nomor Induk Siswa), dan nama lengkap siswa."
                android:textSize="14sp"
                app:layout_constraintBaseline_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Tujuan utama dari aplikasi ini adalah memudahkan sekolah, guru, serta staf administrasi dalam proses pengumpulan dan pengelolaan data-data penting ini secara teratur dan efisien. Dengan aplikasi ini, pengguna dapat dengan mudah mengunggah foto siswa, memasukkan tanggal lahir, NIS, dan nama lengkap mereka ke dalam sistem."
                android:textSize="14sp"
                app:layout_constraintBaseline_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView1"
                app:layout_constraintVertical_bias="0" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Aplikasi ini dirancang dengan fokus pada efisiensi, sehingga pengguna dapat dengan cepat mengakses informasi yang mereka butuhkan dan menghasilkan laporan yang relevan. Semua ini bertujuan untuk meningkatkan pengelolaan data siswa di sekolah."
                android:textSize="14sp"
                app:layout_constraintBaseline_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView2"
                app:layout_constraintVertical_bias="0" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Kami mohon maaf jika ada kekurangan dalam aplikasi ini dan akan terus berupaya untuk memperbaiki dan mengembangkan aplikasi ini lebih baik lagi. Semoga aplikasi ini dapat terus berkembang untuk memberikan manfaat yang lebih besar, Terimakasih."
                android:textSize="14sp"
                app:layout_constraintBaseline_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView3"
                app:layout_constraintVertical_bias="0" />

            <Button
                android:id="@+id/btn_kembali_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="KEMBALI"
                android:textColor="@color/white"
                android:background="@drawable/ctr_bg"
                android:textAllCaps="false"
                android:textSize="18sp"
                app:layout_constraintBaseline_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView4" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
